pipeline {
    agent{
        agent any
        }

        environment{
            NODE_VERSIONS = '20.x'
        }

        tools{
            nodejs "${NODE_VERSIONS}"
        }

        stages{
            stage('Checkout'){
                steps{
                    git branch: 'main', url: 'https://github.com/NubkiWan/CI-CD-Exersice-Repo'
                }
            }

            stage ("Install dependencies"){
                steps{
                    script{
                            bat 'npm install'
                    }
                }
            }

            stage("Start application and run tests"){
                bat 'npm start'
                bat 'wait-on http://localhost:8081'
                bat 'npm test'
            }

            post {
                always{
                    echo "CI pipeline completed"
                }
            }
            
        }
    }